<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_of_kerbois_users_form" model="ir.ui.view">
            <field name="name">of.res.user.profcommi.form</field>
            <field name="model">res.users</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
			<field name="tz" position="after">
                <field name="seller_code"/>
            	<newline/>
            </field>
            </field>
        </record>
        
        <record id="of_view_account_invoice_filter" model="ir.ui.view">
            <field name="name">of.account.invoice.select</field>
            <field name="model">account.invoice</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <field name="period_id" string="Period" position="after">
                    <field name="date_invoice" invisible="1" />
                    <field name="date_invoice_from" filter_domain="[('date_invoice','&gt;=',self)]"/>
                    <field name="date_invoice_to" filter_domain="[('date_invoice','&lt;=',self)]" />
                </field>
            </field>
        </record>

<!--##############################################################################-->
<!--###########################______Account Move______###########################-->
<!--##############################################################################-->

        <record model="ir.ui.view" id="of_account_move_form_view">
            <field name="name">of.account.move.form</field>
            <field name="model">account.move</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="date" position="replace"/>
                <field name="period_id" position="before">
                    <field name="date" on_change="onchange_date(date)"/>
                </field>
                <field name="line_id" position="before">
                    <field name="default_line_name" invisible="1"/>
                </field>
                <field name="line_id" position="attributes">
                	<attribute name="context">{'balance': balance , 'journal': journal_id , 'default_name': default_line_name}</attribute>
                </field>
            </field>
        </record>


<!--##############################################################################-->
<!--#########################______Account Move Line______########################-->
<!--##############################################################################-->

        <record id="of_view_account_move_line_filter" model="ir.ui.view">
            <field name="name">Journal Items</field>
            <field name="model">account.move.line</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="account.view_account_move_line_filter"/>
            <field name="arch" type="xml">
                <field name="date" position="replace">
                    <field name="date" invisible="1"/>
                    <field name="date_from" filter_domain="[('date','&gt;=',self)]"/>
                    <field name="date_to" filter_domain="[('date','&lt;=',self)]" />
                </field>
                <field name="period_id" position="after">
                    <field name="debit" invisible="1" />
                    <field name="credit" invisible="1" />
                    <field name="amount_min" filter_domain="['|',('debit','&gt;=',self),('credit','&gt;=',self)]"/>
                    <field name="amount_max" filter_domain="[('debit','&lt;=',self),('credit','&lt;=',self)]" />
                </field>
            </field>
        </record>

        <record id="account.action_account_moves_all_a" model="ir.actions.act_window">
            <field name="context" model="res.users" eval="obj(1).get_fiscalyear_search_context()"/>
        </record>

<!--##############################################################################-->
<!--######################______Account Bank Statement______######################-->
<!--##############################################################################-->

        <record id="of_account_view_bank_statement_form" model="ir.ui.view">
            <field name="name">of.account.bank.statement.form</field>
            <field name="model">account.bank.statement</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">
				<field name="line_ids" position="before">
					<field name="default_line_name" invisible="1"/>
				</field>
				<field name="line_ids" position="attributes">
					<attribute name="context">{'date':date, 'default_name':default_line_name}</attribute>
					<attribute name="on_change">onchange_line_ids(line_ids)</attribute>
				</field>        
	            <field name="balance_end" position="after">
	                <field name="balance_end_diff"/>
	            </field>
            </field>
        </record>


<!--##############################################################################-->
<!--#####################______Account Fiscal Position______######################-->
<!--##############################################################################-->

        <record id="of_view_account_position_form" model="ir.ui.view">
            <field name="name">of.account.fiscal.position.form</field>
            <field name="model">account.fiscal.position</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_account_position_form"/>
            <field name="arch" type="xml">
                <field name="tax_ids" position="replace">
                    <field name="tax_ids" colspan="2" widget="one2many_list" nolabel="1">
                        <tree string="Tax Mapping" editable="bottom">
                            <field name="tax_src_id" domain="[('parent_id','=',False),('company_id','=',parent.company_id)]"/>
                            <field name="tax_dest_id" domain="[('parent_id','=',False),('company_id','=',parent.company_id)]"/>
                        </tree>
                        <form string="Tax Mapping">
                            <field name="tax_src_id" domain="[('parent_id','=',False),('company_id','=',parent.company_id)]"/>
                            <field name="tax_dest_id" domain="[('parent_id','=',False),('company_id','=',parent.company_id)]"/>
                        </form>
                    </field>
                </field>
                <field name="account_ids" position="replace">
                    <field name="account_ids" colspan="2" widget="one2many_list" nolabel="1">
                        <tree string="Account Mapping" editable="bottom">
                            <field name="account_src_id" domain="[('company_id','=',parent.company_id)]"/>
                            <field name="account_dest_id" domain="[('company_id','=',parent.company_id)]"/>
                        </tree>
                        <form string="Account Mapping">
                            <field name="account_src_id" domain="[('company_id','=',parent.company_id)]"/>
                            <field name="account_dest_id" domain="[('company_id','=',parent.company_id)]"/>
                        </form>
                    </field>
                </field>
            </field>
        </record>
        
<!--##############################################################################-->
<!--###########################______Account Type______###########################-->
<!--##############################################################################-->

        <record id="of_view_account_type_form" model="ir.ui.view">
            <field name="name">of.account.account.type.form</field>
            <field name="model">account.account.type</field>
            <field name="inherit_id" ref="account.view_account_type_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <separator string="Description" position="before">
                    <separator string="PrÃ©fixes comptes" colspan="4"/>
                    <field name="of_type_ids" colspan="4" nolabel="1" widget="one2many_list">
                        <tree string="" editable="bottom">
                            <field name="prefixe_compte"/>
                            <field name="account_type"/>
                            <field name="len_prefixe" invisible="1"/>
                        </tree>
                    </field>
                </separator>
            </field>
        </record>

<!--##############################################################################-->
<!--#########################______Account Tax Code______#########################-->
<!--##############################################################################-->

        <record id="of_view_tax_code_tree" model="ir.ui.view">
            <field name="name">of.account.tax.code.tree</field>
            <field name="model">account.tax.code</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="account.view_tax_code_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="sequence"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
