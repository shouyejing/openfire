<openerp>
    <data>

 		<!-- Ajouter des champs Ã  la liste des courriels --> 
        <record id="of_view_mail_mail_tree" model="ir.ui.view">
        	<field name="name">of.mail.mail.tree</field>
            <field name="model">mail.mail</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="mail.view_mail_tree" />
            <field name="arch" type="xml">
            	<field name="recipient_ids" position="replace"/>
                <field name="subject" position="after">
                    <field name="email_from"/>
                    <field name="email_to"/>
	                <field name="recipient_ids"/>
				</field>
                <field name="state" position="replace">
                	<field name="state"/> <!-- Rendre champs visible -->
                </field>
            </field>
        </record>
        
        <record id="mail.action_view_mail_mail" model="ir.actions.act_window">
        	<field name="context">{}</field>
        </record>
        
        <!-- Ajouter onglet "Historique" dans formulaire partenaire -->
        <record id="of_base_partner_historique_form" model="ir.ui.view">
            <field name="name">of.base.partner.historique.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <page name="sales_purchases" position="after">
   					<page name="historique" string="Historique">
   					</page>
		        </page>
            </field>
        </record>
       
       <!-- Ajouter type adresse (livraison, facture, ...) dans liste partenaires -->
       <record id="of_res_partner_tree" model="ir.ui.view">
        	<field name="name">of.res.partner.tree</field>
            <field name="model">res.partner</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">
            	<field name="display_name" position="after">
                    <field name="type"/>
				</field>
            </field>
        </record>

    </data>
</openerp>
